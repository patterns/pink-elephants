{{> content_top }}
{{> navbar }}
<section class="section"><div class="container">
<h2 class="title is-2">{{page.head.title}}</h2>
<h4 class="subtitle is-4">{{page.head.description}}</h4>
</div></section>
<section class="section"><div class="container">
<div class="tile is-ancestor">
{{#with (blurbs site.pages)}}

<div class="tile is-4 is-vertical is-parent">
{{#each cola}}
<div class="tile is-child card"><div class="card-content">
    {{#with page.head}}
    <p class="title">{{title}}</p>
    <p class="subtitle">{{#if extra.date}}{{date_format "%F" extra.date}}{{/if}}</p>
    <p >{{description}}</p>
    {{/with}}
    </div>
    <footer class="card-footer"><p class="card-footer-item"><span>
    <a href="{{this.uri}}">View</a></span></p></footer>
</div>
{{/each}}
</div>
<div class="tile is-4 is-vertical is-parent">
{{#each colb}}
<div class="tile is-child card"><div class="card-content">
    {{#with page.head}}
    <p class="title">{{title}}</p>
    <p class="subtitle">{{#if extra.date}}{{date_format "%F" extra.date}}{{/if}}</p>
    <p >{{description}}</p>
    {{/with}}
    </div>
    <footer class="card-footer"><p class="card-footer-item"><span>
    <a href="{{this.uri}}">View</a></span></p></footer>
</div>
{{/each}}
</div>
<div class="tile is-4 is-vertical is-parent">
{{#each colc}}
<div class="tile is-child card">
    <div class="card-image"><figure class="image is-4by3 stripes">
        {{! Transparent instead of image to occupy space. }}
        <p ></p></figure></div>
    <div class="card-content"><div class="content">
    {{#with page.head}}
    <p class="title">{{title}}</p>
    <p class="subtitle">{{#if extra.date}}{{date_format "%F" extra.date}}{{/if}}</p>
    <br/>{{description}}
    {{/with}}
        </div></div>
    <footer class="card-footer"><p class="card-footer-item"><span>
    <a href="{{this.uri}}">View</a></span></p></footer>
</div>
{{/each}}
</div>

{{/with}}
</div>
</div></section>
{{> content_bottom }}
